@model FlexiCareManager.Models.PatientProgramme

@{
    ViewData["Title"] = "Create";
}

<h1>Add Programme for @Model.Patient!.Name</h1>
<hr />
<h4>Adding this programme will create their sessions</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="PatientId"></input>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProgrammeId" class="control-label"></label>
                <select asp-for="ProgrammeId" class ="form-control" asp-items="ViewBag.ProgrammeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-controller="Patients" asp-route-Id=@Model.Patient.Id class="btn btn-secondary" >Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
