@model IEnumerable<FlexiCareManager.Models.PatientProgramme>

@{
    ViewData["Title"] = "Programmes";
}

<h4>Patient's Programmes</h4>

<p>
    <a asp-action="Create" asp-controller="PatientProgrammes" asp-route-Id=@ViewData["PatientId"] class="btn btn-primary btn-sm">New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programme!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-action="Details" asp-controller="PatientProgrammes" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sessions</a>
                <a asp-action="Delete" asp-controller="PatientProgrammes" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
