@model IEnumerable<FlexiCareManager.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
}

<partial name="_SettingsNav" />

<h1>Exercises</h1>

<p class="mt-3">
    <a asp-action="Create" class="btn btn-primary">New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">@Html.DisplayFor(modelItem
                                            => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseCategory!.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Delete</a>
            </td>
        </tr>
                }
    </tbody>
</table>
