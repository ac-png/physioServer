@model FlexiCareManager.Models.ProgrammeTreatment

@{
    ViewData["Title"] = "Create";
}

<h1>Add Treatment for @Html.DisplayFor(model => model.Programme.Name)</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="ProgrammeId">
            </div>
            <div class="form-group">
                <label asp-for="TreatmentId" class="control-label"></label>
                <select asp-for="TreatmentId" class="form-control"
                    asp-items="ViewBag.TreatmentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /><a asp-action="Details" asp-controller="Programmes" asp-route-id="@Model.ProgrammeId" class="btn btn-secondary">Back</a>
                
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
